@model DeviceType
@{
    ViewData["Title"] = "Device Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        @ViewBag.Accion
    </div>
    <div class="card-body">

        <form asp-action="GuardarCambiosDeviceType" asp-controller="Home" method="post">

            <input type="hidden" asp-for="IdDevice" />

           <div class="mb-2">
                <label class="form-label">Description</label>
                <input type="int" class="form-control form-control-sm" asp-for="Description" />
            </div>
            <div class="mb-2">
                <label class="form-label">Display Name</label>
                <input type="text" class="form-control form-control-sm" asp-for="DisplayName" />
            </div>         

            <button type="submit" class="btn btn-success btn-sm">Guardar Cambios</button>
            <a asp-action="IndexDeviceType" asp-controller="Home" class="btn btn-warning btn-sm">Volver a lista</a>
        </form>

    </div>

</div>

